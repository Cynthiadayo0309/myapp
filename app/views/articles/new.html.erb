<% content_for(:html_title) { 'CTD CAFE | 記事新規投稿' } %>
<%= stylesheet_link_tag "new" %>

<body>
  <div id="home">
        <header class="page-header wrapper">
            <h1 data-aos="fade-right" data-aos-delay="300" data-aos-duration="3000">
                <a href="/boards">
                    <img class="logo" src="/assets/cafe_logo.png" alt="ロゴ">
                    <span class="logo_title">CTD CAFE</span>
                </a>
            </h1>
            <nav data-aos="fade-left" data-aos-delay="300" data-aos-duration="3000">
                <ul class="main-nav">
                    <li><a class="button" href="/boards">Home</a></li>
                    <li><a class="button" href="/articles">Articles</a></li>
                    <% if logged_in? %>
                    <li>
                      <%= link_to "Out", '/login', method: :delete, class: 'button' %>
                    </li>
                    <% end %>
                </ul>
            </nav>
        </header>

        <% if flash[:error_messages] %>
          <div class="alert wrapper">
            <ul>
              <% flash[:error_messages].each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="wrapper">
          <h2>新規記事作成フォーム</h2>
          <%= form_for @article do |f| %>
            <div class="form-group">
              <%= f.label 'タイトル' %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group image">
              <%= f.label '画像' %><br>
              <%= f.file_field :picture %>
            </div>
            <div class="form-group">
              <%= f.label '本文' %>
              <%= f.text_area :content, class: 'form-control', rows: 10 %>
            </div>
            <%= f.submit '投稿する', class: 'submit-btn' %>
          <% end %>
        </div>

        <footer>
          <div class="wrapper">
            <p><small>&copy; 2020 CTD CAFE</small></p>
          </div>
        </footer>
  </div>
</body>
